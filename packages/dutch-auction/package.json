{
  "name": "@summerfi/dutch-auction",
  "description": "Dutch Auction contract for the Summerfi protocol",
  "version": "1.0.0",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  },
  "devDependencies": {
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2",
    "@summerfi/eslint-config": "workspace:*",
    "@summerfi/jest-config": "workspace:*",
    "@summerfi/tenderly-utils": "workspace:*",
    "@summerfi/typescript-config": "workspace:*"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "lint": "pnpm run lint:sol && pnpm run prettier:check",
    "lint:sol": "forge fmt --check && pnpm solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test",
    "test:coverage": "pnpm run gen:prices && forge coverage",
    "test:coverage:report": "pnpm run gen:prices && forge coverage --ir-minimum --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "gen:prices": "cd utils && python generate_price_data.py"
  }
}
