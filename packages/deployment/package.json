{
  "name": "@summerfi/deployment",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.d.ts"
    },
    "./abis/*": {
      "import": "./src/abis/*",
      "types": "./src/abis/*"
    }
  },
  "scripts": {
    "start:node": "hardhat node",
    "build": "forge build --extra-output-files abi",
    "build:hh": "REPORT_CONTRACT_SIZE=true hardhat compile",
    "spawn:devnet": "export $(pnpx tsx scripts/node/spawn-devnet.ts)",
    "coverage": "forge coverage --ir-minimum",
    "coverage:lcov": "forge coverage --report lcov --ir-minimum",
    "coverage:report": "pnpm coverage:lcov && genhtml -o coverage --branch-coverage lcov.info",
    "deploy:core": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-core.ts --network $NETWORK",
    "deploy:gov": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-gov.ts --network $NETWORK",
    "deploy:buy-and-burn": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-buy-and-burn.ts --network $NETWORK",
    "deploy:fleet": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-fleet.ts --network $NETWORK",
    "deploy:ark": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-ark.ts --network $NETWORK",
    "deploy:aavev3-ark": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-aavev3-ark.ts --network $NETWORK",
    "deploy:compoundv3-ark": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-compoundv3-ark.ts --network $NETWORK",
    "deploy:metamorpho-ark": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-metamorpho-ark.ts --network $NETWORK",
    "deploy:morpho-ark": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-morpho-ark.ts --network $NETWORK",
    "deploy:pendle-pt-ark": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-pendle-pt-ark.ts --network $NETWORK",
    "deploy:pendle-lp-ark": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-pendle-lp-ark.ts --network $NETWORK",
    "deploy:erc4626-ark": "REPORT_CONTRACT_SIZE=true hardhat run scripts/deploy-erc4626-ark.ts --network $NETWORK",
    "deploy:list": "hardhat ignition deployments",
    "deploy:status:arbitrum": "hardhat ignition status chain-42161",
    "verify:mainnet": "hardhat ignition verify chain-1",
    "verify:arbitrum": "hardhat ignition verify chain-42161",
    "deploy:status:base": "hardhat ignition status chain-8453",
    "verify:base": "hardhat ignition verify chain-8453",
    "visualize:core": "hardhat ignition visualize ./ignition/modules/fleet.ts",
    "create-distributions-tx": "hardhat run scripts/governance/create-distributions-transaction-safe.ts --network $NETWORK",
    "whitelist-vesting-wallets-tx": "hardhat run scripts/governance/whitelist-vesting-wallets-safe.ts --network $NETWORK",
    "generate-merkle-root": "tsx scripts/generate-merkle-root.ts"
  },
  "devDependencies": {
    "@layerzerolabs/lz-v2-utilities": "2.3.39",
    "@nomicfoundation/hardhat-foundry": "1.1.2",
    "@nomicfoundation/hardhat-ignition": "0.15.9",
    "@nomicfoundation/hardhat-ignition-viem": "0.15.9",
    "@nomicfoundation/hardhat-verify": "2.0.12",
    "@summerfi/access-contracts": "workspace:*",
    "@summerfi/constants": "workspace:*",
    "@summerfi/dependencies": "workspace:*",
    "@summerfi/dutch-auction": "workspace:*",
    "@summerfi/earn-gov-contracts": "workspace:*",
    "@summerfi/eslint-config": "workspace:*",
    "@summerfi/jest-config": "workspace:*",
    "@summerfi/math-utils": "workspace:*",
    "@summerfi/percentage-solidity": "workspace:*",
    "@summerfi/rewards-contracts": "workspace:*",
    "@summerfi/tenderly-utils": "workspace:*",
    "@summerfi/typescript-config": "workspace:*",
    "@summerfi/voting-decay": "workspace:*",
    "@types/prompts": "2.4.9",
    "hardhat": "2.22.14",
    "hardhat-contract-sizer": "2.10.0",
    "kleur": "4.1.5",
    "prompts": "2.4.2",
    "ts-node": "10.9.2"
  },
  "dependencies": {
    "@openzeppelin/merkle-tree": "1.0.7",
    "@safe-global/api-kit": "^2.5.7",
    "@safe-global/protocol-kit": "^5.2.0",
    "@safe-global/types-kit": "^1.0.1",
    "@summerfi/earn-protocol-contracts": "workspace:*",
    "dotenv": "16.4.5",
    "solhint-plugin-prettier": "0.1.0",
    "solidity-bytes-utils": "0.8.2",
    "tsx": "4.19.2"
  }
}
